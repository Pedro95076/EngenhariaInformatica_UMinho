extends layout 

block content
    .w3-card-4 
        header.w3-container.w3-teal 
            h1 Lista de Compositores
            a.w3-btn.w3-round.w3-grey(href="/compositores/registo") +
            a(href="/") Home Page
   
    .w3-container 
        table.w3-table-all
            tr 
                th Id
                th Nome
                th Periodo
                th Actions

            each compositor in clist
                tr 
                    td= compositor.id
                    td
                        a(href="/compositores/" + compositor.id) #{compositor.nome}
                    td 
                        a(href="/periodos/" + compositor.periodo.id) #{compositor.periodo.nome}
                    td
                        a.w3-btn.w3-blue(href="/compositores/edit/" + compositor.id) Edit
                        a.w3-btn.w3-red(href="/compositores/delete/" + compositor.id) Delete  
            
    footer.w3-container.w3-teal 
        h5 Generated by A97569::EngWeb2024 in #{data}