extends layout 

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1 Compositor: #{compositor.nome}
            a(href="javascript:history.back()") Voltar
        
        .w3-container 
            ul.w3-ul.w3-card-4(style="width:100%")
                li 
                    b Nome:  
                    span #{compositor.nome}
                li 
                    b Número:  
                    span #{compositor.id}
                li 
                    b Biografia:  
                    span #{compositor.bio}
                li 
                    b Data de Nascimento:  
                    span #{compositor.dataNasc}
                li 
                    b Data de Óbito:  
                    span #{compositor.dataObito}
                li 
                    b Periodo:  
                    a(href='/periodos/' + compositor.periodo.id)= compositor.periodo.nome
            
        
        footer.w3-container.w3-teal
            h5 Generated by A97569::EngWeb2024 in #{data}