extends layout 

block content 
    .w3-card-4 
        header.w3-container.w3-teal 
            h2 Composer Form
            a(href="javascript:history.back()") Voltar
        
        form.w3-container(method="POST")
            fieldset
                legend Metadata
                label id
                input.w3-input.w3-round(type="text" name="id" readonly value= c.id) 
                label Nome
                input.w3-input.w3-round(type="text" name="nome" value= c.nome)
                label Bio
                input.w3-input.w3-round(type="textarea" name="bio" value= c.bio)
                labal Data de Nascimento
                input.w3-input.w3-round(type="date" name="dataNasc" value= c.dataNasc)
                label Date da Morte
                input.w3-input.w3-round(type="date" name="dataObito" value= c.dataObito)
                label Periodo
                input.w3-input.w3-round(type="text" name="periodo" value= c.periodo.nome)
                br
                button.w3-btn.w3-teal.w3-mb-2(type="submit") Edit
    
        footer.w3-container.w3-teal 
            h5 Generated by A97569::EngWeb2024 in #{data}
                