extends layout 

block content 
    .w3-card-4
        header.w3-container.w3-teal 
            h1 Lista de Per√≠odos
            a.w3-btn.w3-round.w3-grey(href="/periodos/registo") +
        
            a(href="/") Home Page
        
        .w3-container 
            table.w3-table-all 
                tr 
                    th Id
                    th Nome
                    th Actions
                        
                each periodo in plist
                    tr 
                        td= periodo.id
                        td 
                            a(href="/periodos/" + periodo.id)= periodo.nome

                        td 
                            span [
                            a(href="/periodos/edit/" + periodo.id) Edit
                            span ] 
                            span [
                            a(href="/periodos/delete/" + periodo.id) Delete
                            span ]
            
        footer.w3-container.w3-teal 
            h5 Generated by A97569::EngWeb2024 in #{data}
                
            
        
    